<Window x:Class="Practika2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.30*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Coffee" Grid.Row="1" Content="Кофейные напитки" FontSize="20" Click="Coffee_Click"/>
        <Button x:Name="Pocupatel" Grid.Row="1" Grid.Column="1" Content="Ожидание заказа" FontSize="25" Click="Pocupatel_Click"/>
        <Frame  x:Name="PageFrame" Grid.ColumnSpan="2" Grid.Row="2" />
        <TextBlock Grid.ColumnSpan="2" Text="Кофейня" HorizontalAlignment="Center" FontSize="40"/>

    </Grid>
</Window>
